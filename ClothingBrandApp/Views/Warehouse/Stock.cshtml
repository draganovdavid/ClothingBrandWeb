@* ﻿@using ClothingBrandApp.Web.ViewModels.Warehouse
@model WarehouseStockViewModel

@{
    ViewData["Title"] = "Warehouse Stocks";
}

@section Styles {
    <link rel="stylesheet" href="~/css/user.css">
}

<div class="cinema-bg bg-dark text-light">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-light fw-bold">Now Showing @@ @Model.WarehouseName</h1>
            <a asp-controller="Warehouse" asp-action="Index" class="btn btn-secondary fw-bold">
                <i class="bi bi-arrow-left"></i> Back to Warehouses
            </a>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3" id="warehouseContainer">
            @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="ratio ratio-4x3">
                        <img src="@getImageUrl(product.ImageUrl)"
                             class="card-img-top product-image"
                             alt="@product.Name" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.Id" class="card-title-link">
                            <div class="card-title">
                                <span>@product.Name</span>
                            </div>
                        </a>
                        <span class="fw-bold text-dark mt-2 mb-2" style="font-size:1.2rem;">@product.Price.ToString("C")</span>
                        <div class="add-to-cart-fav-row">
                            @if (product.IsInShoppingCart)
                            {
                                <form asp-controller="ShoppingCart" asp-action="Index" method="get" class="flex-grow-1">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button class="btn btn-success add-to-cart-btn">
                                        <i class="fas fa-check"></i> Added to Cart
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-controller="ShoppingCart" asp-action="Add" method="post" class="flex-grow-1">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-outline-dark add-to-cart-btn" @(product.InStock ? "" : "disabled")>
                                        <i class="fas fa-shopping-cart"></i> Add to Cart
                                    </button>
                                </form>
                            }
                            @if (User.Identity is { IsAuthenticated: true } && !User.IsInRole("Admin"))
                                {
                                    <button class="btn btn-outline-success rounded-pill buy-ticket-btn fw-bold"
                                            data-cinema-id="@Model.WarehouseId"
                                            data-cinema-name="@Model.WarehouseName"
                                            data-warehouse-id="@warehouse.Id"
                                            data-warehouse-name="@warehouse.Title">
                                        <i class="fas fa-ticket-alt"></i> Buy Ticket
                                    </button>
                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="warehouseDetailsModal" tabindex="-1" aria-labelledby="warehouseDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="warehouseDetailsLabel"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body bg-light text-dark">
                <div id="warehouseDetailsContent" class="p-3">
                </div>
            </div>

            <div class="modal-footer bg-white">
                @if (User.Identity is { IsAuthenticated: true } && !User.IsInRole("Admin"))
                {
                    <button id="add-to-watchlist-btn" class="btn btn-warning">Add to Watchlist</button>
                }
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/warehouses.js"></script>
    <script src="~/js/pagination.js"></script>
}

<partial name="_BuyTicketModalPartial" /> *@