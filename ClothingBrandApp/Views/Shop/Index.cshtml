@using ClothingBrandApp.Web.ViewModels.Product
@model IEnumerable<ProductIndexViewModel>

@{
    ViewData["Title"] = "Shop All Clothing";
    Func<string?, string> getImageUrl = imageUrl =>
        string.IsNullOrEmpty(imageUrl)
            ? Url.Content("~/images/default-image.jpg")
            : (imageUrl!.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                ? imageUrl
                : Url.Content("~/" + imageUrl.TrimStart('/')));
}

<style>
    .product-image {
        width: 100%;
        height: 250px;
        object-fit: contain;
        cursor: pointer;
        border-radius: 0.5rem 0.5rem 0 0;
        display: block;
        background: #f8f9fa;
    }
    .card-title {
        color: #222 !important;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.5rem;
    }
    .favorite-btn {
        background: none;
        border: none;
        color: #e74c3c;
        font-size: 1.3rem;
        cursor: pointer;
        padding: 0;
        transition: color 0.2s;
    }
    .favorite-btn:hover {
        color: #c0392b;
    }
    .add-to-cart-btn {
        margin-top: 0.5rem;
        width: 100%;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">@ViewData["Title"]</h2>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Shop" asp-action="Create" class="btn btn-dark">
                <i class="fas fa-plus"></i> Add Product
            </a>
        }
    </div>
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="ratio ratio-4x3">
                        <img src="@getImageUrl(product.ImageUrl)"
                             class="card-img-top product-image"
                             alt="@product.Name" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="card-title">
                            <span>@product.Name</span>
                            <form asp-controller="Favorites" asp-action="Toggle" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit" class="favorite-btn" title="Add to Favorites">
                                    <i class="@(product.IsFavorite ? "fas" : "far") fa-heart"></i>
                                </button>
                            </form>
                        </div>
                        <div class="mt-auto">
                            <span class="fw-bold text-dark">@product.Price.ToString("C")</span>
                            <form asp-controller="Cart" asp-action="Add" method="post" class="mt-2">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit" class="btn btn-outline-dark add-to-cart-btn">
                                    <i class="fas fa-shopping-cart"></i> Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>