@using ClothingBrandApp.Web.ViewModels.Product
@model IEnumerable<ProductIndexViewModel>

@{
    ViewData["Title"] = "Shop All Clothing";
    Func<string?, string> getImageUrl = imageUrl =>
        string.IsNullOrEmpty(imageUrl)
            ? Url.Content("~/images/default-image.jpg")
            : (imageUrl!.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                ? imageUrl
                : Url.Content("~/" + imageUrl.TrimStart('/')));
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/shop.css" asp-append-version="true" />

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        $('.favorite-link').closest('form').on('submit', function (e) {
            e.preventDefault();

            var $form = $(this);
            var url = $form.attr('action');
            var data = $form.serialize();

            $.post(url, data)
                .done(function () {
                    var $icon = $form.find('i.far, i.fas');
                    if ($icon.hasClass('far')) {
                        $icon.removeClass('far').addClass('fas');
                        $form.attr('action', '/Favorite/Delete');
                        $form.find('button').attr('title', 'Remove from Favorites');
                    } else {
                        $icon.removeClass('fas').addClass('far');
                        $form.attr('action', '/Favorite/Add');
                        $form.find('button').attr('title', 'Add to Favorites');
                    }
                })
                .fail(function () {
                    alert('Error updating favorites.');
                });
        });
    });
</script>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">@ViewData["Title"]</h2>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-back-bright rounded-pill px-4 fw-bold">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        }
    </div>
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="ratio ratio-4x3">
                        <img src="@getImageUrl(product.ImageUrl)"
                             class="card-img-top product-image"
                             alt="@product.Name" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.Id" class="card-title-link">
                            <div class="card-title">
                                <span>@product.Name</span>
                            </div>
                        </a>
                        <span class="fw-bold text-dark mt-2 mb-2" style="font-size:1.2rem;">@product.Price.ToString("C")</span>
                        <div class="add-to-cart-fav-row">
                            @if (product.IsInShoppingCart)
                            {
                                <form asp-controller="ShoppingCart" asp-action="Index" method="get" class="flex-grow-1">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button class="btn btn-success add-to-cart-btn">
                                        <i class="fas fa-check"></i> Added to Cart
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-controller="ShoppingCart" asp-action="Add" method="post" class="flex-grow-1">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-outline-dark add-to-cart-btn" @(product.InStock ? "" : "disabled")>
                                        <i class="fas fa-shopping-cart"></i> Add to Cart
                                    </button>
                                </form>
                            }
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                if (product.IsFavorite)
                                {
                                    <form asp-controller="Favorite" asp-action="Delete" method="post" class="m-0 p-0">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="favorite-link" title="Remove from Favorites">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="Favorite" asp-action="Add" method="post" class="m-0 p-0">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="favorite-link" title="Add to Favorites">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    </form>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>