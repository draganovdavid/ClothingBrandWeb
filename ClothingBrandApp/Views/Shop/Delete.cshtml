@model ClothingBrandApp.Web.ViewModels.Product.ProductDeleteInputModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 bg-dark text-light p-4 rounded">
                <div class="row">
                    <div class="col-md-4 d-flex align-items-center">
                        <img src="@Model.ImageUrl"
                             alt="@Model.Name"
                             class="img-fluid rounded shadow" loading="lazy" />
                    </div>

                    <div class="col-md-8">
                        <h3 class="text-warning fw-bold mb-3">@Model.Name</h3>

                        <p class="fs-5">
                            Are you sure you want to delete this product?
                        </p>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Name" />
                            <input type="hidden" asp-for="ImageUrl" />

                            <div class="d-flex gap-2 mt-4">
                                <button type="submit" class="btn btn-danger fw-bold px-4 rounded-pill">
                                    <i class="bi bi-trash"></i> Confirm
                                </button>

                                <a asp-action="Details"
                                   asp-route-id="@Model.Id"
                                   class="btn btn-outline-light fw-bold px-4 rounded-pill">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
