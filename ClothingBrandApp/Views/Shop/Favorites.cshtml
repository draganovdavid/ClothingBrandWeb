@using ClothingBrandApp.Web.ViewModels.Product
@model IEnumerable<ProductIndexViewModel>

@{
    ViewData["Title"] = "Shop All Clothing";
    Func<string?, string> getImageUrl = imageUrl =>
        string.IsNullOrEmpty(imageUrl)
            ? Url.Content("~/images/default-image.jpg")
            : (imageUrl!.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                ? imageUrl
                : Url.Content("~/" + imageUrl.TrimStart('/')));
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .product-image {
        width: 100%;
        height: 250px;
        object-fit: contain;
        cursor: pointer;
        border-radius: 0.5rem 0.5rem 0 0;
        display: block;
        background: #f8f9fa;
    }

    .card-title-link {
        text-decoration: none;
        color: inherit;
    }

        .card-title-link:hover .card-title {
            text-decoration: underline;
            color: #007bff;
        }

    .card-title {
        margin-top: 10px;
        color: #222 !important;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.5rem;
        cursor: pointer;
    }

    .favorite-link {
        background: none;
        border: none;
        color: #e74c3c;
        font-size: 1.7rem;
        cursor: pointer;
        padding: 0 0 0 0.5rem;
        transition: color 0.2s;
        text-decoration: none;
        display: flex;
        align-items: center;
    }

        .favorite-link:hover {
            color: #c0392b;
            text-decoration: none;
        }

    .add-to-cart-btn {
        width: 100%;
        display: inline-block;
    }

    .add-to-cart-fav-row {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }
</style>
<div class="row g-4">
    @if (!Model.Any())
    {
        <div class="col-12 mt-5">
            <div class="alert alert-warning text-center w-100">
                <strong>No products found!</strong> Please check back later or add new products.
            </div>
        </div>
    }
    else
    {
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <div class="ratio ratio-4x3">
                        <img src="@getImageUrl(product.ImageUrl)"
                             class="card-img-top product-image"
                             alt="@product.Name" />
                    </div>
                    <div class="card-body d-flex flex-column">
                        <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.Id" class="card-title-link">
                            <div class="card-title">
                                <span>@product.Name</span>
                            </div>
                        </a>
                        <span class="fw-bold text-dark mt-2 mb-2" style="font-size:1.2rem;">@product.Price.ToString("C")</span>
                        <div class="add-to-cart-fav-row">
                            <form asp-controller="Cart" asp-action="Add" method="post" class="flex-grow-1">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit" class="btn btn-outline-dark add-to-cart-btn">
                                    <i class="fas fa-shopping-cart"></i> Add to Cart
                                </button>
                            </form>
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="Favorites" asp-action="Add" asp-route-productId="@product.Id" class="favorite-link" title="Add to Favorites">
                                    <i class="far fa-heart"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
