@using ClothingBrandApp.Web.ViewModels.Product
@model IEnumerable<ProductIndexViewModel>

@{
    ViewData["Title"] = "My Shopping Cart";
    var cartTotal = Model.Sum(p => p.Price);
}

<style>
    .btn-back-bright {
		background: #fff !important;
		color: #222 !important;
		border: 2px solid #fff !important;
		font-weight: bold;
		transition: background 0.2s, color 0.2s;
	}

		.btn-back-bright:hover {
			background: #f1f1f1 !important;
			color: #111 !important;
			border: 2px solid #f1f1f1 !important;
		}

    .cart-product-card {
        background-color: #e2e6ea !important;
    }
</style>

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">🛒 My Shopping Cart</h1>
        <a asp-controller="Shop" asp-action="Index" class="btn btn-back-bright rounded-pill px-4 fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Shop
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center py-5">
            <i class="fas fa-shopping-cart fa-3x mb-3 text-muted"></i>
            <h4 class="fw-bold">Your Shopping Cart is empty</h4>
            <p class="text-muted">Add some stylish clothes to see them here.</p>
            <a asp-controller="Shop" asp-action="Index" class="btn btn-primary mt-3">
                <i class="fas fa-tshirt"></i> Browse Collection
            </a>
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-3">
            @foreach (var product in Model)
            {
                <div class="card shadow-sm border-0 rounded-4 d-flex flex-column flex-md-row align-items-center p-3 cart-product-card">
                    <img src="@product.ImageUrl"
                         alt="@product.Name"
                         class="rounded"
                         style="width: 100px; height: 130px; object-fit: cover;" />

                    <div class="card-body ms-md-4 p-0 mt-3 mt-md-0" style="flex-grow: 1;">
                        <h5 class="fw-bold text-dark mb-1">@product.Name</h5>
                        <p class="text-body mb-1"><strong>Price:</strong> @product.Price лв.</p>
                    </div>

                    <div class="d-flex flex-column gap-2 text-center mt-3 mt-md-0">
                        <a asp-controller="Shop"
                           asp-action="Details"
                           asp-route-id="@product.Id"
                           class="btn btn-outline-primary btn-sm rounded-pill px-3">
                            <i class="fas fa-eye"></i> Details
                        </a>

                        <form asp-controller="ShoppingCart" asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <hr class="my-4" />

        <div class="d-flex justify-content-between align-items-center">
            <h4 class="fw-bold">Total:</h4>
            <h4 class="fw-bold text-success">@cartTotal лв.</h4>
        </div>

        <div class="text-end mt-3">
            <a asp-controller="Checkout" asp-action="Index" class="btn btn-success btn-lg px-4 fw-bold rounded-pill">
                <i class="fas fa-credit-card"></i> Proceed to Checkout
            </a>
        </div>
    }
</div>
