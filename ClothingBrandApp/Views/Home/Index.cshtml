@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="position-relative text-white text-center mb-4"
         style="background: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
                 url('/images/summer-collection.png') center/cover no-repeat;
                 height: 50vh; border-radius: 12px;">
        <div class="position-absolute top-50 start-50 translate-middle">
            <h1 class="display-1 fw-bold text-warning text-uppercase" style="font-size: 4rem;">Welcome to TrendWear!</h1>
            <p class="lead text-light fw-bold fs-4">Discover the latest trends and exclusive collections for your unique style.</p>
            <div class="mt-3">
                <a asp-controller="Shop" asp-action="Index"
                   class="btn btn-outline-light fw-bold rounded-pill px-4 py-2 shadow-sm">
                    <i class="bi bi-bag"></i> Shop Now
                </a>
            </div>
        </div>
    </div>

    <div class="container my-5">
        <h2 class="text-center fw-bold mb-4 text-light">Popular Collections</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-3 bg-secondary">
                    <div class="card-body text-center p-4">
                        <h5 class="card-title fw-bold text-primary">🌞 Summer Essentials</h5>
                        <p class="card-text text-light">Stay cool and stylish with our best-selling summer outfits.</p>
                        <small class="text-light">Over 5,000 items sold this season.</small>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-3 bg-secondary">
                    <div class="card-body text-center p-4">
                        <h5 class="card-title fw-bold text-danger">👗 New Arrivals</h5>
                        <p class="card-text text-light">Fresh looks just dropped! Explore the latest in fashion.</p>
                        <small class="text-light">Rated ★★★★★ by our customers</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}

@section Styles {
    <link rel="stylesheet" href="~/css/user.css">
}